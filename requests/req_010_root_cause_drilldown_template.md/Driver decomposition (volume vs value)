WITH daily AS (
  SELECT
    DATE(payment_date) AS day,
    SUM(revenue_amount) AS revenue,
    COUNT(DISTINCT user_id) AS paid_users,
    SAFE_DIVIDE(SUM(revenue_amount), COUNT(DISTINCT user_id)) AS arppu
  FROM `project.dataset.payments`
  WHERE DATE(payment_date) >= DATE_SUB(CURRENT_DATE(), INTERVAL 14 DAY)
  GROUP BY 1
)
SELECT
  day,
  revenue,
  paid_users,
  arppu,
  revenue - LAG(revenue) OVER (ORDER BY day) AS revenue_delta,
  paid_users - LAG(paid_users) OVER (ORDER BY day) AS users_delta,
  arppu - LAG(arppu) OVER (ORDER BY day) AS arppu_delta
FROM daily;
