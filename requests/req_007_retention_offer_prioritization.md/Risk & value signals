, signals AS (
  SELECT
    ub.user_id,
    ub.last_payment_date,
    DATE_DIFF(CURRENT_DATE(), ub.last_payment_date, DAY) AS days_since_last_payment,
    ub.total_revenue,
    ub.avg_transaction_value,
    aw.tx_last_30d,
    aw.tx_before_30d,
    aw.revenue_last_30d,
    aw.revenue_before_30d,

    -- Risk signals
    CASE WHEN DATE_DIFF(CURRENT_DATE(), ub.last_payment_date, DAY) > 30 THEN 1 ELSE 0 END AS inactive_flag,
    CASE WHEN aw.tx_last_30d < aw.tx_before_30d THEN 1 ELSE 0 END AS frequency_drop_flag,
    CASE WHEN aw.revenue_last_30d < aw.revenue_before_30d THEN 1 ELSE 0 END AS revenue_drop_flag
  FROM user_base ub
  JOIN activity_windows aw
    ON ub.user_id = aw.user_id
)
